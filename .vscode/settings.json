{
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "[python]": {
        "editor.formatOnSave": true
    },
    "python.languageServer": "Pylance",
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv",
    "flake8.path": [
        "${workspaceFolder}/.venv/bin/pflake8"
    ],
}